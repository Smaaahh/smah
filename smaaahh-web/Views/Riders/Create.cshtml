
@{
    ViewBag.Title = "Create";
}

<h2>Create Rider</h2>
<div class="info">@ViewBag.Message</div>
@using (Html.BeginForm("Create", "Riders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div id="TableRegister">

            <table>
                <tr>
                    <td>@Html.Label("Nom", htmlAttributes: new { @class = "" })</td>
                    <td>
                        @Html.Editor("Nom", new { htmlAttributes = new { @class = "txtBox txt" } })
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Prenom", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Prenom", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Pseudo", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Pseudo", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("E-mail", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Email", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Mot de Passe", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Password", new { htmlAttributes = new { @class = "txtBox txt", type = "password" } })</td>

                </tr>
                <tr>
                    <td>@Html.Label("N° Téléphone", htmlAttributes: new { @class = " " })</td>
                    <td>@Html.Editor("NTelephone", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Image", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.TextBox("file", "", new { type = "file", @class = "txtBox  txt2" })</td>
                </tr>
            </table>
            <div class="sub">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        </div>
}

