
@{
    ViewBag.Title = "Create";
}

<h2>Create a Driver</h2>
<div class="info">@ViewBag.Message</div>

@using (Html.BeginForm("Create", "Drivers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="TableRegister">
            <table>
                <tr>
                    <td>@Html.Label("Nom", htmlAttributes: new { @class = "" })</td>
                    <td>
                        @Html.Editor("Nom", new { htmlAttributes = new { @class = "txtBox txt" } })
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Prénom", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Prenom", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Pseudo", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Pseudo", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("E-mail", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Email", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Mot de Passe", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.Editor("Password", new { htmlAttributes = new { @class = "txtBox txt", type="password" } })</td>

                </tr>
                <tr>
                    <td>@Html.Label("N° Téléphone", htmlAttributes: new { @class = " " })</td>
                    <td>@Html.Editor("NTelephone", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Image de profil", htmlAttributes: new { @class = "" })</td>
                    <td>@Html.TextBox("File", "", new { type = "file", @class = "txtBox  txt2" })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Modèle voiture", htmlAttributes: new { @class = " " })</td>
                    <td>@Html.Editor("Modele_voiture", new { htmlAttributes = new { @class = "txtBox txt " } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Nombre de passagers", htmlAttributes: new { @class = " " })</td>
                    <td>@Html.Editor("Nbplace_voiture", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
                <tr>
                    <td>@Html.Label("Plaque d'immatriculation", htmlAttributes: new { @class = " " })</td>
                    <td>@Html.Editor("Immatriculation", new { htmlAttributes = new { @class = "txtBox txt" } })</td>
                </tr>
            </table>
            <div class="sub subreg">
                <br />
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

}
